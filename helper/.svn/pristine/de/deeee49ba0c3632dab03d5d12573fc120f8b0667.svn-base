.menu .weui_tabbar {
    position: fixed;
}

.menu .weui_navbar {
    position: fixed;
    /*background-color: rgba(0, 5, 7, 0.99);*/
    background-color: #d3d3d3;
    font-size: 35px;
    height: 50px;
    position: relative;
}

.menu .weui_navbar #topPopovershow {
    /*去掉边框和小三角*/
    /*border: 0;*/
    /*background: transparent;*/
    /*appearance: none;*/
    /*-moz-appearance: none; !* Firefox *!*/
    /*-webkit-appearance: none; !* Safari 和 Chrome *!*/

    /*去除ul前面的点 */
    outline: none;
    float: right;
    background: url('/helper/images/select.png');
    background-size: 35px 35px;
    margin-top: 9px;
    margin-left: 5px;
    /*display:inline-block;*/
    height: 35px;
    width: 35px;
}

.menu .weui_navbar #title {
    width: 33px;
    height: 33px;
    position: absolute;
    margin: auto;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    color: black;
    font-size: 30px;
}

