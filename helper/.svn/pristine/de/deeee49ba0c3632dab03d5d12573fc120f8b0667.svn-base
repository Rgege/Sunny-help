.menu .weui_navbar #topPopovershow option {
    width: 50px;
    font-size: 5px;
    background-color: rgba(90, 98, 104, 0.55);

}

#selectDiv{
    margin-top: 50px;
    margin-left: 2px;
    width: 60%;
}
#topPopover {
    width: 60%;
    height: 30%;
}

#topPopover li {
    width: 95%;
    height: 48px;
    /*设置边框*/
    border: 1px solid #aeaeae;
    /*设置浮动*/
    /*float: left;*/
    /*设置文本垂直居中*!*/
    line-height: 30px;
    /*设置文本水平居中*!*/
    text-align: center;
    background-color: #49484b;
    opacity:1;/*透明度 1-0 不透明-透明*/
}

#topPopover li a {
    color: white;
    font-size: 20px;
}

#topPopover li a img {
    width: 35px;
    height: 35px;
}
#friendUl{
    width: auto;
    height: auto;
}
#friendUl li a{
    width: 100%;
    height: 40px;
}