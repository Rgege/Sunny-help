        function Datetime(timePicker,startView,minView) {
            $('#'+timePicker).datetimepicker({
                language: 'zh-CN',//显示中文
                format: 'yyyy-MM',//显示格式
                startView: startView,
                minView: minView,
                // minView: "month",//
                initialDate: new Date(),
                // autoclose: true,//选中自动关闭
                // todayBtn: true,//显示今日按钮
                locale: moment.locale('zh-cn')
            }).on('changeDate',function(ev){
                // var  time=$("#"+timePicker).val();
                console.log(ev.toString());
                test("y")
            });

            //默认获取当前日期
            var today = new Date();
            var nowdate = (today.getFullYear()) + "-" + (today.getMonth() + 1) + "-" + (today.getDate());
            //对日期格式进行处理
            var date = new Date(nowdate);
            var mon = date.getMonth() + 1;
            var day = date.getDate();
            var mydate = date.getFullYear() + "-" + (mon < 10 ? "0" + mon : mon) + "-" + (day < 10 ? "0" + day : day)
            // document.getElementById(inputId).value = mydate;
        }

        function creatTable(p) {
            var name="日";
            if (p=="y") {
                name="年"
            }else if (p=="m"){
                name="月"
            } else {
                name="日"
            }
            $('#showTitel').empty();
            var c1Name=name=="日"? "日期":name+"份";
            var c0=$('<th style="display: none">id</th>');
            var c1= $('<th style="text-align: center">'+c1Name +'</th>');
            var c2= $('<th style="text-align: center">'+name+'账单数</th>');
            var c3= $('<th style="text-align: center">'+name+'收入</th>');
            var c4= $('<th style="text-align: center">'+name+'支出</th>');
            $('#showTitel').append(c0);
            $('#showTitel').append(c1);
            $('#showTitel').append(c2);
            $('#showTitel').append(c3);
            $('#showTitel').append(c4);
        }

