        //////////////////////////////////////////////监听滑动事件/////////////////////////////////////////////////////////////
        var isScroll =function (el) {
            // test targets
            var elems = el ? [el] : [document.documentElement, document.body];
            var scrollX = false, scrollY = false;
            for (var i = 0; i < elems.length; i++) {
                var o = elems[i];
                // test horizontal
                var sl = o.scrollLeft;
                o.scrollLeft += (sl > 0) ? -1 : 1;
                o.scrollLeft !== sl && (scrollX = scrollX || true);
                o.scrollLeft = sl;
                // test vertical
                var st = o.scrollTop;
                o.scrollTop += (st > 0) ? -1 : 1;
                o.scrollTop !== st && (scrollY = scrollY || true);
                o.scrollTop = st;
            }
            // ret
            return {
                scrollX: scrollX,
                scrollY: scrollY
            };
        }
        
        var startx, starty;
        //获得角度
        function getAngle(angx, angy) {
            return Math.atan2(angy, angx) * 180 / Math.PI;
        };
        //根据起点终点返回方向 1向上 2向下 3向左 4向右 0未滑动
        function getDirection(startx, starty, endx, endy) {
            var angx = endx - startx;
            var angy = endy - starty;
            var result = 0;
            //如果滑动距离太短
            if (Math.abs(angx) < 2 && Math.abs(angy) < 2) {
                return result;
            }
            var angle = getAngle(angx, angy);
            if (angle >= -135 && angle <= -45) {
                result = 1;
            } else if (angle > 45 && angle < 135) {
                result = 2;
            } else if ((angle >= 135 && angle <= 180) || (angle >= -180 && angle < -135)) {
                result = 3;
            } else if (angle >= -45 && angle <= 45) {
                result = 4;
            }
            return result;
        }
        //手指接触屏幕
        function touchstart(e) {
            startx = e.touches[0].pageX;
            starty = e.touches[0].pageY;
        }
        //手指离开屏幕
        function touchend(e) {
            console.log("=============x:"+isScroll(document.getElementById("outer")).scrollX+"  y:"+isScroll(document.getElementById("outer")).scrollY)
            if (isScroll(document.getElementById("outer")).scrollY==false){//滚条没出现就不往下执行
                return;
            }
            var endx, endy;
            endx = e.changedTouches[0].pageX;
            endy = e.changedTouches[0].pageY;
            var direction = getDirection(startx, starty, endx, endy);
            switch (direction) {
                case 0:
                    console.log("未滑动！");
                    break;
                case 1:
                    var nScrollHight = 0; //滚动距离总长(注意不是滚动条的长度)
                    var nScrollTop = 0;   //滚动到的当前位置
                    var nDivHight = $("#outer").height();
                    nScrollHight = $(this)[0].scrollHeight;
                    nScrollTop = $(this)[0].scrollTop;
                    console.log("nScrollTop:"+nScrollTop+"  nDivHight:"+nDivHight+"  nScrollHight:"+nScrollHight)
                    if(nScrollTop + nDivHight >= nScrollHight){
                        if (document.getElementById("yTimePicker").style.display!="none"){
                            var type="0";
                        }else if (document.getElementById("mTimePicker").style.display!="none"){
                            var type="1";
                        }else if (document.getElementById("dTimePicker").style.display!="none"){
                            var type="2";
                        }
                        getList("1",type,"");
                    }
                    break;
                case 2:
                    console.log("向下！")
                    break;
                case 3:
                    console.log("向左！")
                    break;
                case 4:
                    console.log("向右！")
                    break;
                default:
            }
        }
        //////////////////////////////////////////////////////////////////////////////////////////////////////////////
        /*
        * 加载页面请求:以月为单位
        * action=0 页面加载自动触发以及点year month day 按钮触发
        * action=1 上滑触发
        * action=2 点击日历触发
        *@ type:
        *
        */
        function getList(action,type,date) {
            if (action=="2"|| action=="0"){
                $('#showBody').empty();
            }
            var currentPage=1;
            if (action=="1") {
                var hasNextPage=$("#hasNextPage").val();
                console.log(hasNextPage)
                if (hasNextPage=="false"){
                    alert();
                    return;
                }
                var lastPage=$('#pageNum').val();
                if (lastPage ==null && lastPage =="" && lastPage ==undefined){
                    currentPage=1;
                }else {
                   var intPage=parseInt(lastPage);
                    currentPage=intPage+1;
                }
            }
            var url="/helper/recordView/getStatList";
            var params={
                "statVeidoo":type,
                "date":date,
                "currentPage":currentPage,
                "pageSize":14
            };
            sendPost(url,params,function (data) {
                if (data != null && data != "") {
                    console.log(data)
                    if (data.resCode == "100000") {
                        console.log("recordId="+data.object);
                        if (data.object.size=="0" && (action=="0" || action=="2")){
                            var tr=$('<tr></tr>');
                            var text=$('<td colspan=5; style="color: white;text-align: center">没有更多数据</td>');
                            tr.append(text);
                            $('#showBody').append(tr);
                            return;
                        }else if(data.object.size=="0" && action=="1"){
                            alert();
                            return;
                        }

                        document.getElementById('pageNum').value=data.object.pageNum;
                        document.getElementById('pages').value=data.object.pages;
                        document.getElementById('hasNextPage').value=data.object.hasNextPage;
                        document.getElementById('hasPreviousPage').value=data.object.hasPreviousPage;
                        var list=data.object.list;
                        var length=list.length;
                        for (var i = 0; i <length ; i++) {
                            var tr=$('<tr></tr>');
                            var id=$('<td style="display: none">'+list[i].id+'</td>');
                            var time=$('<td style="text-align: center">'+list[i].date+'</td>');
                            var count=$('<td style="text-align: center">'+list[i].recordNum+'</td>');
                            var inc=$('<td style="text-align: center">'+list[i].incAmount+' &nbsp;<i class="fa fa-arrow-up" style="color: red"></i></td>');
                            var exp=$('<td style="text-align: center">'+list[i].expAmount+' &nbsp;<i class="fa fa-arrow-down" style="color: green"></i></td>');
                            tr.append(id);
                            tr.append(time);
                            tr.append(count);
                            tr.append(inc);
                            tr.append(exp);
                            $('#showBody').append(tr);
                        }

                    } else if (data.resCode == "000012") {
                        location.href = '/helper/tally/login';
                    }else {
                        sweetAlert(data.message, "", "error");
                    }
                }
            },token);

        }
