body {
    padding: 0px;
    margin:0px;
    /*background: url(../images/sign.jpg) no-repeat;*/
    background-position: center;
    background-size: cover;
    background-attachment: fixed;
    background-repeat: no-repeat;
}
#talk_con{
    width:900px;  /*300*/
    height:700px; /*200*/
    border:1px solid #666;
    margin:50px auto 0;
    background:#f9f9f9;
}
#menu{
    width:280px;
    height:660px;
    border:1px solid #666;
    background:#fff;
    float:left;
    margin-left:10px;
    margin-top: 10px;

}
.title{
    width:580px;
    height:50px;
    border:1px solid #666;
    background:#fff;
    margin:10px auto 0;
    overflow:auto;
}
.message{
    width:580px;
    height:420px;
    border:1px solid #666;
    background:#fff;
    margin:10px auto 0;
    overflow:auto;
}
.editZone{
    width:580px;
    margin:10px auto 0;
}
.text{
    width:420px;
    height:100px;
    padding:0px;
    float:left;
    margin-left:10px;
    outline:none;
    text-indent:10px;
}
.send{
    width:56px;
    height:30px;
    float:left;
    margin-left:10px;
}

.talk .selfsay{
    text-align:left;/*左对齐*/
    float:right;/*浮动靠右边*/
    /*margin:10px;*/
    margin-left: 20px;
    display:inline-block;
    background:#0181cc;
    border-radius:10px;
    color:#fff;
    padding:5px 10px;
}

.talk .friendsay{
    margin:10px;
    text-align:right;
    display:inline-block;
    background:#ef8201;
    border-radius:10px;
    color:#fff;
    padding:5px 10px;
}
.chart{
    position: absolute;
    width: 600px;
    height: 660px;
    margin:10px auto 0;
    margin-left:290px;
    margin-top:20px;
}